<?xml version='1.0'?>
<sets>
<!-- 
  'set' defines a group of LEDs that light the same 

  each LED 'set' runs in it's own thread.
  -->
<set>
 <!-- Used for logging -->
 <name>Green</name>
 <!-- color for the LED if only one is set -->
 <!-- See below for how to handle multiple colors -->
 <color>
  <red>0x00</red><green>0x7a</green><blue>0x00</blue>
 </color>
 <!--
  Variance defines 'wobble' in the color (+/-) 

  Define color as 7F with wobble of 7F for all 3 for 'random'
  -->
 <variance>
  <red>0</red><green>5</green><blue>5</blue>
 </variance>
 <!--
  All LEDs light with the same base color, but each one gets
  its own 'random' variance.
  -->
